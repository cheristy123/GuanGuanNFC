<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="活动列表"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="大类列表"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_typeAndActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="所有大类和对应的子活动"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="所有盒子和位置"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_boxAndContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="所有盒子和盒子内部的物品、物品数量"/>
    </LinearLayout>
    <Button
        android:id="@+id/insertTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"/>
    <Button
        android:id="@+id/friend_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友动态"/>
    <Button
        android:id="@+id/application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有好友申请"/>
    <Button
        android:id="@+id/allFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有好友"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/switchMoment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变好友申请状态"/>
        <EditText
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="from"
            />
        <EditText
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="to"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/submit"
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/username"
            android:hint="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password"
            android:hint="password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rela_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/load_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/liuyu_load"/>
    </RelativeLayout>



</LinearLayout>